<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewName"
            style="@style/item_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewNameLable"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewNameTeacher"
            style="@style/item_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewNameTeacherLable"
            app:layout_constraintTop_toBottomOf="@id/textViewName" />

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="0dp"
            style="@style/item_text"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewNameTeacher" />

        <TextView
            android:id="@+id/textViewBeginLessonLable"
            style="@style/item_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Начало занятия"
            app:layout_constraintEnd_toStartOf="@id/textViewEndLesson"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewDescription" />

        <TextView
            android:id="@+id/textViewEndLessonLable"
            style="@style/item_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Конец занятия"
            app:layout_constraintEnd_toStartOf="@id/textViewPlase"
            app:layout_constraintStart_toEndOf="@id/textViewBeginLesson"
            app:layout_constraintTop_toBottomOf="@id/textViewDescription" />

        <TextView
            android:id="@+id/textViewPlaseLable"
            style="@style/item_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Класс"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textViewEndLesson"
            app:layout_constraintTop_toBottomOf="@id/textViewDescription" />

        <TextView
            android:id="@+id/textViewBeginLesson"
            android:layout_width="0dp"
            style="@style/item_text"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textViewEndLesson"
            app:layout_constraintTop_toBottomOf="@id/textViewPlaseLable" />

        <TextView
            android:id="@+id/textViewEndLesson"
            android:layout_width="0dp"
            style="@style/item_text"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintEnd_toStartOf="@id/textViewPlase"
            app:layout_constraintStart_toEndOf="@id/textViewBeginLesson"
            app:layout_constraintTop_toBottomOf="@id/textViewPlaseLable" />

        <TextView
            android:id="@+id/textViewPlase"
            android:layout_width="0dp"
            style="@style/item_text"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@id/textViewEndLesson"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewPlaseLable" />

        <TextView
            android:id="@+id/textViewNameLable"
            style="@style/item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Занятие:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewNameTeacherLable"
            style="@style/item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Учитель:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewName" />




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>